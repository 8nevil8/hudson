<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler">
     <j:set var="from" value="${if (request.session.attribute('from')!=null) request.session.getAttribute('from');  else if (request.getParameter('from')!=null) request.getParameter('from'); else if (request.requestURI=='/loginError' || request.requestURI=='/login') '/'; else request.requestURI;}" />
    <script type="text/javascript">

                jQuery(document).ready(function() {

                    jQuery('#link1').click(function() {
                        jQuery.blockUI({
                          message: jQuery('#question'),
                          css: { 
                            width: '350px', 
                          },
                          title:  'Confirmation',
                        });
                    });


                    jQuery('#yes').click(function() {
                        jQuery('#loginError').css({ opacity: 0.0 });
                        var dataString = jQuery("#loginForm").serialize();
                        jQuery.ajax({
                          type: 'POST',
                          url: "${app.securityRealm.authenticationGatewayUrl}",
                          data: dataString,
                          success: function(){
                            window.location.href="${from}";
                          },
                          error: function(){
                            jQuery('#loginError').css({ opacity: 1.0 });
                          },
                          dataType: "html"
                        }); 
                    
                        //setTimeout(jQuery.unblockUI, 4000);
                    });

                    jQuery('#no').click(function() {
                        jQuery.unblockUI();
                        return false;
                    });

                });

    </script>

    <a href="#" id="link1">
        <b>${%login}</b>
    </a>
        
       
    <div id="question" style="display:none; cursor: default">
        <j:set var="submitFrom" value="${if (request.session.attribute('from')!=null) request.session.getAttribute('from');  else if (request.getParameter('from')!=null) request.getParameter('from'); else if (request.requestURI=='/loginError' || request.requestURI=='/login') '/'; else request.requestURI;}" />
        <st:include page="loginDialog.jelly" />
    </div>

</j:jelly>
